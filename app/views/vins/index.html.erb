<div class="header">
  <%= image_tag "index_background", width: "100%" %>
</div>

<div class="container">
  <div class="row">

    <% @vins.each do |vin| %>

      <div class="col-xs-12 col-lg-4">
        <%= link_to vin_path(vin) do %>
          <div class="card">
            <div class="card_image">
              <%= cl_image_tag @vin.photo, width: 235, crop: :fill %>
            </div>
            <ul class="card_ul">

              <li class="card_li_producteur"><%= vin.producteur %></li>
              <li><%= vin.annee %></li>
              <li><%= vin.parker %></li>
              <li><%= vin.jrobinson %></li>
              <li><%= vin.prix_btl %></li>

            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
